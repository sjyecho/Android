        <TextView
            android:id="@+id/time"
            android:text="2022-05-01 17:50:34"
            android:gravity="center_vertical"
            android:paddingTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>